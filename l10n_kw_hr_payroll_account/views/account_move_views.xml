<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- VIEWS -->

       

        <!-- account.move (Journal Entry) -->

        <record id="view_move_tree" model="ir.ui.view">
            <field name="name">account.move.tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_tree"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="payslip_id" invisible="1"/>
                   <field name="employee_id" optional="show"/>
                    <field name="contract_id" optional="hide"/>
                </field>
               
            </field>
        </record>

      

        <record id="view_account_move_payslip_form" model="ir.ui.view">
            <field name="name">account.move.form.payslip</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="get_payslip"
                        class="oe_stat_button"
                        icon="fa-money"
                        type="object"
                        groups="hr_payroll.group_hr_payroll_user"
                            string="Payslip" >
                    </button>
                </xpath>
                <xpath expr="//group[@id='other_tab_entry_group']" position="after">
                    <label for="employee_id"/>
                   <field name="employee_id" /><br/>
                    <label for="contract_id"/>
                    <field name="contract_id" />
                </xpath>
            </field>
        </record>

  


    </data>
</odoo>
